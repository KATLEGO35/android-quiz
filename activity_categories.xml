<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.abc.MainActivity">
    >

    <TextView
        android:id="@+id/ChooseApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="Choose Quiz!"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Science"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Science"
        android:layout_marginTop="120dp"
 />

    <Button
        android:id="@+id/Nature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nature"
        android:layout_below="@+id/Science"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" />

    <Button
        android:id="@+id/Mathematics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        android:text="Mathematics"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_toStartOf="@+id/ChooseApp"
        app:srcCompat="@drawable/f" />

</RelativeLayout>